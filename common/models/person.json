{
  "name": "Person",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "username": {
      "type": "string",
      "unique": true
    }
  },
  "validations": [],
  "relations": {
    "chats": {
      "type": "hasMany",
      "model": "Chat",
      "foreignKey": "personId",
      "through": "ChatMember"
    },
    "ownedChat": {
      "type": "hasMany",
      "model": "Chat",
      "foreignKey": "ownerId"
    },
    "messages": {
      "type": "hasMany",
      "model": "Message"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
